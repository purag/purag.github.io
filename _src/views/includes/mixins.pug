mixin _experience (e)
  h4= e.company ? e.company : e.project
  if e.company
    h5.no-screen= e.role
  if (e.end)
    time #{e.start} &ndash; #{e.end}
  else
    time #{e.start}
  if e.company
    h5.no-print= e.role
  ul
    each t in e.tasks
      li !{t}
  dl
    each s in e.skills
      dt= s

mixin experience (e)
  if (e.href)
    a(href=e.href target="_blank").experience
      +_experience(e)
  else
    article.experience
      +_experience(e)
